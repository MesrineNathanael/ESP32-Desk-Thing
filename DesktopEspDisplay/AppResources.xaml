<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:desktopEspDisplay="clr-namespace:DesktopEspDisplay"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:tb="http://www.hardcodet.net/taskbar"
    mc:Ignorable="d">
    <ContextMenu
        x:Key="SysTrayMenu"
        d:DataContext="{d:DesignInstance desktopEspDisplay:AppTrayViewModel}"
        x:Shared="false">
        <MenuItem Header="{Binding DeviceInfo}" />
        <MenuItem Header="{Binding ServiceInfo}" />
        <Separator />
        <MenuItem Command="{Binding StartStopServiceCommand}" Header="{Binding StartStopServiceButtonText}" />
        <MenuItem Command="{Binding EditConfigCommand}" Header="Edit config.json" />
        <!-- <ComboBoxItem /> -->
        <Separator />
        <MenuItem Command="{Binding ExitApplicationCommand}" Header="Exit" />
    </ContextMenu>


    <!--  the application's NotifyIcon - started from App.xaml.cs. Declares its own view model.  -->
    <tb:TaskbarIcon
        x:Key="NotifyIcon"
        ContextMenu="{StaticResource SysTrayMenu}"
        IconSource="/esp.ico"
        ToolTipText="Double-click for window, right-click for menu">

        <!--  self-assign a data context (could also be done programmatically)  -->
        <tb:TaskbarIcon.DataContext>
            <desktopEspDisplay:AppTrayViewModel />
        </tb:TaskbarIcon.DataContext>
    </tb:TaskbarIcon>

</ResourceDictionary>